{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"server/types/*"
			]
		}
	},
	"include": [
		"server/**/*"
	],
	"exclude": [
		"node_modules",
		"client"
	]
}